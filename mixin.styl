grid()
  display flex
  flex-wrap wrap
  list-style none

grid--fit()
  > *
    flex 1

grid--shrink()
  > *
    flex 0 1 auto

grid--full()
  > *
    flex 0 0 100%

grid--half()
  > *
    flex 0 0 50%

grid--third()
  > *
    flex 0 0 33.3333%

grid--quarter()
  > *
    flex 0 0 25%

// order
grid--columns()
  flex-direction column

// vertical alignment
grid--top()
  align-items flex-start

grid--bottom()
  align-items flex-end

grid--center()
  align-items center

cell--top()
  align-self flex-start

cell--bottom()
  align-self flex-end

cell--center()
  align-self center

cell--scroll-x()
  height 100%
  overflow-x auto
  -webkit-overflow-scrolling touch

cell--scroll-y()
  height 100%
  overflow-y auto
  -webkit-overflow-scrolling touch

// cell sizing
cell--shrink()
  flex 0 1 auto

cell--full()
  flex 0 0 100%

cell--half()
  flex 0 0 50%

cell--third()
  flex 0 0 33.3333%

cell--quarter()
  flex 0 0 25%

cell--empty()
  // For IE10 to work, you need to specify a unit for the third flexbox property.
  // Autoprefixr normally handles this, except for zero units. You also need to tell
  // minifycss not to compress zero units.
  flex 0 0 0px