*
  box-sizing border-box

body, html, .grid
  margin 0
  padding 0

.grid
  display flex
  flex-wrap wrap
  list-style none

  > *
    flex 1

// order
.grid--columns
  flex-direction column

// vertical alignment
.grid--top
  align-items flex-start

.grid--bottom
  align-items flex-end

.grid--center
  align-items center

.cell--top
  align-self flex-start

.cell--bottom
  align-self flex-end

.cell--center
  align-self center

.cell--scroll-x
  height 100%
  overflow-x auto
  -webkit-overflow-scrolling touch

.cell--scroll-y
  height 100%
  overflow-y auto
  -webkit-overflow-scrolling touch

// cell sizing
.cell--shrink
  flex 0 1 auto

.cell--full
  flex 0 0 100%

.cell--half
  flex 0 0 50%

.cell--third
  flex 0 0 33.3333%

.cell--quarter
  flex 0 0 25%

// grid sizing
.grid--shrink > *
  flex 0 1 auto

.grid--full > *
  flex 0 0 100%

.grid--half > *
  flex 0 0 50%

.grid--third > *
  flex 0 0 33.3333%

.grid--quarter > *
  flex 0 0 25%

// small override
@media (min-width: 24em)
  .grid-small--fit > *
    flex 1

  .grid-small--full > *
    flex 0 0 100%

  .grid-small--half > *
    flex 0 0 50%

  .grid-small--third > *
    flex 0 0 33.3333%

  .grid-small--quarter > *
    flex 0 0 25%

// large override
@media (min-width: 48em)
  .grid-large--fit > *
    flex 1

  .grid-large--full > *
    flex 0 0 100%

  .grid-large--half > *
    flex 0 0 50%

  .grid-large--third > *
    flex 0 0 33.3333%

  .grid-large--quarter > *
    flex 0 0 25%
